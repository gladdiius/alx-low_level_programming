NAME = school

CC = gcc

SRC = main.c school.c

OBJ = $(SRC:.c=.o)

CFLAGS = -Wall -Werror -Wextra -pedantic

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) -o $@ $^

.c.o:
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	-$(RM) *~ *.swp $(NAME) $(OBJ)

fclean: clean
	-$(RM) $(NAME)

oclean:
	-$(RM) $(OBJ)

re: fclean all

.PHONY: all clean fclean oclean re
