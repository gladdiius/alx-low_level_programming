NAME = school

CC = gcc

SRC = main.c school.c

OBJ = $(patsubst %.c, %.o, $(SRC))

CFLAGS = -Wall -Werror -Wextra -pedantic

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) -o $@ $^

$(OBJ): $(SRC) m.h
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	$(RM) *~ *.swp $(NAME) $(OBJ)

re: clean all

.PHONY: all clean re
